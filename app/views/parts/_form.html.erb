<%= form_for @part, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="row">
    <div class="span6">
      <div class="control-group  <%= @part.errors.has_key?(:condition) ? "error": "" %>">
        <%= f.label :condition, :class => 'control-label' %>
        <div class="controls">
          <%= f.select :condition, options_for_select(["New", "Used"], :selected => @part.condition) %>
        </div>
      </div>
      <div class="control-group <%= @part.errors.has_key?(:name) ? "error": "" %>">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="control-group <%= @part.errors.has_key?(:list_price) ? "error": "" %>">
        <%= f.label :list_price, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :list_price %>
        </div>
      </div>
      <div class="control-group <%= @part.errors.has_key?(:price) ? "error": "" %>">
        <%= f.label :price, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :price %>
        </div>
      </div>
      <div class="control-group <%= @part.errors.has_key?(:part_number) ? "error": "" %>">
        <%= f.label :part_number, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :part_number %>
        </div>
      </div>
      <div class="control-group <%= @part.errors.has_key?(:description) ? "error": "" %>">
        <%= f.label :description, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :description %>
        </div>
      </div>
    </div>
    <% if @part.image? %>
      <div class="span6">
        <div class="control-group">
          <label class="control-label">Current Image</label>
          <div class="controls">
            <%= image_tag @part.image.url(:small), :alt => @part.name%>
          </div>
        </div>
      </div>
    <% end %>
    <div class="span6">
      <div class="control-group <%= @part.errors.has_key?(:image) ? "error": "" %>">
        <label class="control-label">New Image</label>
        <div class="controls">
          <%= f.file_field :image %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                parts_path, :class => 'btn' %>
  </div>
<% end %>
