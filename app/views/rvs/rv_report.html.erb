<% @categories.each do |(category, rvs)| %>
<h2><%= category.pluralize %></h2>
<hr>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Condition</th>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Length</th>
      <th>Stock Number</th>
      <th>List Price</th>
      <th>Price</th>
      <th>Cost</th>
    </tr>
  </thead>
  <tbody>
    <% rvs.each do |rv| %>
      <tr>
        <td><%= rv.condition %></td>
        <td><%= rv.year %></td>
        <td><%= rv.make %></td>
        <td><%= rv.model %></td>
        <td><%= rv.length %></td>
        <td><%= rv.stock_number %></td>
        <td><%= number_to_currency rv.list_price %></td>
        <td><%= number_to_currency rv.price %></td>
        <td><%= number_to_currency rv.cost %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>